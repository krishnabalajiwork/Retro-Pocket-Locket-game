{
  "name": "retro-pocket-locket",
  "version": "1.0.0",
  "description": "A nostalgic collection of 10 HTML5 mini-games with Indian cultural themes",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "build": "npm run build:all",
    "build:all": "npm-run-all --parallel build:*",
    "build:brick-blaster": "cd games/brick-blaster && npm run build",
    "build:subway-sprinter": "cd games/subway-sprinter && npm run build", 
    "build:rooftop-cricket-smash": "cd games/rooftop-cricket-smash && npm run build",
    "build:fruit-slice-masala": "cd games/fruit-slice-masala && npm run build",
    "build:racing-rickshaw": "cd games/racing-rickshaw && npm run build",
    "build:ludo-blitz": "cd games/ludo-blitz && npm run build",
    "build:snake-redux": "cd games/snake-redux && npm run build",
    "build:memory-bollywood": "cd games/memory-bollywood && npm run build",
    "build:puzzle-rickshaw-rush": "cd games/puzzle-rickshaw-rush && npm run build",
    "build:rangoli-tetris": "cd games/rangoli-tetris && npm run build",
    "dev:brick-blaster": "cd games/brick-blaster && npm run dev",
    "dev:subway-sprinter": "cd games/subway-sprinter && npm run dev",
    "dev:rooftop-cricket-smash": "cd games/rooftop-cricket-smash && npm run dev",
    "dev:fruit-slice-masala": "cd games/fruit-slice-masala && npm run dev",
    "dev:racing-rickshaw": "cd games/racing-rickshaw && npm run dev",
    "dev:ludo-blitz": "cd games/ludo-blitz && npm run dev",
    "dev:snake-redux": "cd games/snake-redux && npm run dev",
    "dev:memory-bollywood": "cd games/memory-bollywood && npm run dev",
    "dev:puzzle-rickshaw-rush": "cd games/puzzle-rickshaw-rush && npm run dev",
    "dev:rangoli-tetris": "cd games/rangoli-tetris && npm run dev",
    "test": "npm run test:all",
    "test:all": "npm-run-all --parallel test:*",
    "test:brick-blaster": "cd games/brick-blaster && npm run test",
    "test:subway-sprinter": "cd games/subway-sprinter && npm run test",
    "test:rooftop-cricket-smash": "cd games/rooftop-cricket-smash && npm run test",
    "test:fruit-slice-masala": "cd games/fruit-slice-masala && npm run test",
    "test:racing-rickshaw": "cd games/racing-rickshaw && npm run test",
    "test:ludo-blitz": "cd games/ludo-blitz && npm run test",
    "test:snake-redux": "cd games/snake-redux && npm run test",
    "test:memory-bollywood": "cd games/memory-bollywood && npm run test",
    "test:puzzle-rickshaw-rush": "cd games/puzzle-rickshaw-rush && npm run test",
    "test:rangoli-tetris": "cd games/rangoli-tetris && npm run test",
    "lighthouse:all": "npm-run-all --parallel lighthouse:*",
    "lighthouse:brick-blaster": "lighthouse games/brick-blaster/dist/index.html --output html --output-path reports/brick-blaster-lighthouse.html",
    "lighthouse:subway-sprinter": "lighthouse games/subway-sprinter/dist/index.html --output html --output-path reports/subway-sprinter-lighthouse.html",
    "test:e2e": "playwright test",
    "test:mobile": "playwright test --project mobile",
    "deploy": "npm run build:all && gh-pages -d games",
    "clean": "npm-run-all --parallel clean:*",
    "clean:brick-blaster": "cd games/brick-blaster && rm -rf dist node_modules",
    "clean:subway-sprinter": "cd games/subway-sprinter && rm -rf dist node_modules",
    "clean:rooftop-cricket-smash": "cd games/rooftop-cricket-smash && rm -rf dist node_modules",
    "clean:fruit-slice-masala": "cd games/fruit-slice-masala && rm -rf dist node_modules",
    "clean:racing-rickshaw": "cd games/racing-rickshaw && rm -rf dist node_modules",
    "clean:ludo-blitz": "cd games/ludo-blitz && rm -rf dist node_modules",
    "clean:snake-redux": "cd games/snake-redux && rm -rf dist node_modules",
    "clean:memory-bollywood": "cd games/memory-bollywood && rm -rf dist node_modules",
    "clean:puzzle-rickshaw-rush": "cd games/puzzle-rickshaw-rush && rm -rf dist node_modules",
    "clean:rangoli-tetris": "cd games/rangoli-tetris && rm -rf dist node_modules",
    "install:all": "npm-run-all --parallel install:*",
    "install:brick-blaster": "cd games/brick-blaster && npm install",
    "install:subway-sprinter": "cd games/subway-sprinter && npm install",
    "install:rooftop-cricket-smash": "cd games/rooftop-cricket-smash && npm install",
    "install:fruit-slice-masala": "cd games/fruit-slice-masala && npm install",
    "install:racing-rickshaw": "cd games/racing-rickshaw && npm install",
    "install:ludo-blitz": "cd games/ludo-blitz && npm install",
    "install:snake-redux": "cd games/snake-redux && npm install", 
    "install:memory-bollywood": "cd games/memory-bollywood && npm install",
    "install:puzzle-rickshaw-rush": "cd games/puzzle-rickshaw-rush && npm install",
    "install:rangoli-tetris": "cd games/rangoli-tetris && npm install",
    "postinstall": "npm run install:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/RetroPocketLocket.git"
  },
  "keywords": [
    "games",
    "html5",
    "phaser3",
    "indian",
    "culture",
    "retro",
    "mini-games",
    "nostalgia",
    "bollywood",
    "streamlit"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/RetroPocketLocket/issues"  
  },
  "homepage": "https://github.com/your-username/RetroPocketLocket#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "gh-pages": "^6.1.1",
    "lighthouse": "^11.4.0",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}